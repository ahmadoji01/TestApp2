<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="22dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etThreadTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Thread Title"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etPostContent"
        android:layout_below="@+id/etThreadTitle"
        android:layout_alignLeft="@+id/etThreadTitle"
        android:layout_alignStart="@+id/etThreadTitle"
        android:layout_alignRight="@+id/etThreadTitle"
        android:layout_alignEnd="@+id/etThreadTitle"
        android:hint="Thread Content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button"
        android:layout_below="@+id/etPostContent"
        android:layout_centerHorizontal="true"
        android:onClick="onSubmitClick" />

</RelativeLayout>