<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/scrollView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="^"
                    android:id="@+id/btnUp"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/tvPostVotes"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_above="@+id/btnDown"
                    android:layout_alignRight="@+id/btnDown"
                    android:layout_alignEnd="@+id/btnDown" />

                <Button
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="^"
                    android:id="@+id/btnDown"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Lorem ipsum dolor sit amet, consectur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                android:id="@+id/tvPostBody"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView4"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/linearLayout2"
                android:layout_toRightOf="@+id/linearLayout2" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ABABAB"
            android:layout_below="@+id/tvPostBody"
            android:layout_toRightOf="@+id/linearLayout2"
            android:layout_toEndOf="@+id/linearLayout2"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivPostIcon"
                android:adjustViewBounds="true"
                android:src="@drawable/avatar_profile"
                android:maxHeight="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="false"
                android:layout_toStartOf="@id/relativeLayout"
                android:layout_toLeftOf="@id/relativeLayout"
                android:layout_alignStart="@id/relativeLayout" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:id="@+id/tvPostUsername"
                    android:layout_alignTop="@+id/ivPostIcon"
                    android:layout_toRightOf="@+id/ivPostIcon"
                    android:layout_toEndOf="@+id/ivPostIcon"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21-12-2016 06:00"
                    android:id="@+id/tvPostDate"
                    android:layout_alignBottom="@+id/ivPostIcon"
                    android:layout_toRightOf="@+id/ivPostIcon"
                    android:layout_toEndOf="@+id/ivPostIcon"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>